{{#if sidebar.comments}}

  <div class="card mt-2">
    <div class="card-header bg-azulSec text-black">
      <h5><i class="fas fa-comment"></i>Ultimos Comentarios</h5>
    </div>
    <div class="card-body">
      {{#each sidebar.comments}}
        <div class="row mb-2">
          <div class="col">
            <a href="/images/{{image.uniqueId}}">
              <img
                src="{{image.imgSrc}}"
                class="img-thumbnail w-70"
              />
            </a>
          </div>
          <div class="col">
            <blockquote class="w-100">
              <p>{{comment}}</p>
              <footer class="blockquote-footer">
                <span>{{name}}</span>
                <span>{{back timestamp}}</span>
              </footer>

            </blockquote>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

{{/if}}