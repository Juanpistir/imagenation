<div class="card">
  <div class="card-header bg-azulSec">
    <h3 class="card-title text-black">
      <i class="fa-solid fa-camera-retro"></i>
      Sube una imagen
    </h3>
  </div>
  <div class="card-body">
    <div class="container">
      <form
        method="POST"
        action="/images"
        enctype="multipart/form-data"
        class="m-2"
      >
        <div class="form-group m-2">
          <label for="imagen">Imagen:</label>
          <input
            type="file"
            name="image"
            id="imagen"
            class="form-control"
            required
          />
        </div>
        <div class="form-group m-2">
          <label for="title">Título de la Imagen:</label>
          <input
            type="text"
            name="title"
            id="titulo"
            class="form-control"
            required
          />
        </div>
        <div class="form-group m-2">
          <label for="description">Descripción:</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            rows="4"
          ></textarea>
        </div>
        <button type="submit" class="btn m-2 bg-azulSec text-black"><i
            class="fa fa-upload"
          ></i>
          Subir</button>
      </form>
    </div>

  </div>

</div>

<div class="card mt-2 mb-2">
  <div class="card-header bg-azulSec text-black">
    <h3><i class="far fa-images"></i> Subidas Recientes</h3>
  </div>

  <div class="card-body">
    <div class="row">
      {{#each images}}
        <div class="col-md-4 mb-2">
          <a href="/images/{{uniqueId}}">
            <img
              src="/public/upload/{{filename}}"
              alt=""
              class="w-100 h-100 img-thumbnail"
            />
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</div>